<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="GreenWorld.RecordTasksPage"
             NavigationPage.BackButtonTitle="Main Menu"
             NavigationPage.HasBackButton="True"
             Title="Record Tasks">
    <NavigationPage.TitleView>
        <Label Text="RECORD TASKS"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="CenterAndExpand"
               TextColor="White"
               FontAttributes="Bold"/>
    </NavigationPage.TitleView>
    <StackLayout Margin="10,20,10,10"
                 HorizontalOptions="Center">
        <ListView ItemsSource="{Binding Tips}"
                  HasUnevenRows="True"
                  ItemSelected="OnListViewItemSelected"
                  ItemTapped="OnListViewItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="0,20,10,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Row="0"
                                   Grid.RowSpan="3"
                                   Source="{Binding ImageUrl}"
                                   Aspect="AspectFill"
                                   HeightRequest="80"
                                   WidthRequest="80" />
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   Text="{Binding Title}"
                                   FontAttributes="Bold"
                                   TextDecorations="Underline"
                                   TextColor="ForestGreen"
                                   FontSize="Default"
                                   HorizontalOptions="Center"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="2"
                                   Text="{Binding Text}"
                                   VerticalOptions="End" />
                            <StackLayout Grid.Row="2"
                                         Grid.Column="1"
                                         Grid.ColumnSpan="2"
                                         Orientation="Horizontal"
                                         HorizontalOptions="Center">
                                <Label 
                                   Text="{Binding LinkUrl}"
                                   TextColor="Blue"
                                   TextDecorations="Underline"
                                   x:Name="LinkLabel" 
                                    IsVisible="False"/>

                                <Button 
                                    Text="Learn More"
                                    x:Name="LinkButton"
                                    Clicked="OnLinkButtonClicked"
                                    BorderColor="CornflowerBlue"
                                    CornerRadius="10"/>
                            </StackLayout>

                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackLayout Orientation="Horizontal"
                     HorizontalOptions="Fill"
                     Margin="0,10,0,0"
                     BackgroundColor="AliceBlue">
            <Button Text="Profile"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OnProfileButtonClicked"
                    CornerRadius="10"/>
            <Button Text="List"
                    x:Name="BottomBarListButton"
                    HorizontalOptions="CenterAndExpand"
                    CornerRadius="10"
                    Clicked="OnBottomBarListButtonClicked"/>
            <Button Text="Record Tasks"
                    HorizontalOptions="CenterAndExpand"
                    CornerRadius="10"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
